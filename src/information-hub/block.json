{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "custom-blocks/information-hub",
	"version": "0.1.0",
	"title": "Information Hub",
	"category": "widgets",
	"icon": "info",
	"description": "Create an information hub with up to 9 customizable cards with different list types and color options.",
	"example": {},
	"attributes": {
		"cards": {
			"type": "array",
			"default": []
		},
		"globalBackgroundColor": {
			"type": "string",
			"default": ""
		},
		"globalBorderColor": {
			"type": "string",
			"default": ""
		},
		"applyGlobalColors": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"textdomain": "custom-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css", 
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}